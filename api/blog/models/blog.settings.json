      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "displayDetails": {
      "type": "component",
      "repeatable": false,
      "component": "common-for-all.activation",
      "required": true
    }
  }
}
