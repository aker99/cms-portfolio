{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "name": "Project"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "shortDesc": {
      "type": "string"
    },
    "desc": {
      "type": "richtext"
    },
    "dataViaGithub": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "link": {
      "type": "string",
      "unique": false,
      "required": false
    },
    "ghRepo": {
      "type": "string"
    },
    "langauge": {
      "type": "string"
    },
    "displayDetails": {
      "type": "component",
      "repeatable": false,
      "component": "common-for-all.activation",
      "required": true
    },
    "slug": {
      "type": "string",
      "unique": true
    }
  }
}
